</script>

<form class="">

<%= form.label :Choose_a_customer, class:"fadeIn", style:"color: blue" %>
<%= form.select(:customer_id, Customer.all.collect {|p| [p.compagny_name, p.id]}.sort_by(&:first), {prompt: ""}) %> 
      
<%= form.label :Choose_a_building, class:"text-center", style:"color: red" %>
<%= form.select(:building_id, Building.all.collect {|t| [t.id, t.customer_id ]}) %>
     
<%= form.label :Choose_a_battery, class:"text-center", style:"color: blue" %>
<%= form.select(:battery_id, Battery.all.collect {|b| [b.id, b.building_id ]}) %>

<%= form.label :Choose_a_column, class:"text-center", style:"color: red" %>
<%= form.select(:column_id, Column.all.collect {|c| [c.id, c.battery_id ]}) %>

<%= form.label :Choose_a_elevator, class:"text-center", style:"color: blue" %>
<%= form.select(:elevator_id, Elevator.all.collect {|e| [e.id, e.column_id ]}) %>

<%= form.label :Choose_a_employee, class:"text-center", style:"color: red" %>
<%= form.select(:employee_id, Employee.all.collect {|m| [m.first_name + " " + m.last_name, m.id]}, {prompt: "None"}) %>
 
<%= form.label :Description, class:"text-center", style:"color: blue" %>
<%= form.text_area :report, cols: "75", rows: "10" %>

<div>    
<%= form.submit class:"btn btn-danger", value: "Submit"%>
</div> 
</form>

     
<% end %>